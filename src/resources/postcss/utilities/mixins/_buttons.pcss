/* -----------------------------------------------------------------------------
 * Button - Global
 * ----------------------------------------------------------------------------- */

@define-mixin button-global {
	border: 0;
	cursor: pointer;
	display: inline-block;
	height: auto;
	padding: 0;
	text-decoration: none;
	width: auto;
}

/* -----------------------------------------------------------------------------
 * Button - Solid
 * ----------------------------------------------------------------------------- */

@define-mixin button-solid {
	@mixin desktop-body-2-bold;
	@mixin button-global;

	color: var(--color-background);
	padding: 16px 22px 17px;
	text-align: center;
	transition: var(--transition-background-color);
}

/* -----------------------------------------------------------------------------
 * Button - Primary
 * ----------------------------------------------------------------------------- */

@define-mixin button-primary {
	@mixin button-solid;

	background-color: var(--color-accent-primary);

	&:focus,
	&:hover {
		background-color: var(--color-accent-primary-hover);
	}

	&:active {
		background-color: var(--color-accent-primary-active);
	}

	&:disabled {
		background-color: var(--color-accent-primary-background);
	}
}

/* -----------------------------------------------------------------------------
 * Button - Secondary
 * ----------------------------------------------------------------------------- */

@define-mixin button-secondary {
	@mixin button-solid;

	background-color: var(--color-accent-secondary);
	width: 100%;

	@media (--viewport-medium) {
		width: auto;
	}

	&:focus,
	&:hover {
		background-color: var(--color-accent-secondary-hover);
	}

	&:active {
		background-color: var(--color-accent-secondary-active);
	}

	&:disabled {
		background-color: var(--color-accent-secondary-background);
	}
}

/* -----------------------------------------------------------------------------
 * Button - Border
 * ----------------------------------------------------------------------------- */

@define-mixin button-border {
	@mixin button-global;

	border: 1px solid var(--color-border-default);
	transition: var(--transition-color-border-color);

	&:active {
		border-color: var(--color-border-active);
	}
}

/* -----------------------------------------------------------------------------
 * Button - Small
 * ----------------------------------------------------------------------------- */

@define-mixin button-small {
	@mixin desktop-body-3;
	@mixin button-border;

	color: var(--color-text-secondary);
	padding: 6px 16px 7px;

	&:focus,
	&:hover,
	&:active {
		color: var(--color-text-primary);
	}

	&:disabled {
		color: var(--color-border-default)
	}
}

/* -----------------------------------------------------------------------------
 * Button - Icon Border
 * ----------------------------------------------------------------------------- */

@define-mixin button-icon-border {
	@mixin button-border;

	padding: 16px;
}
